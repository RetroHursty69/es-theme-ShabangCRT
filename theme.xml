<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>4</zIndex>	      
        <type>vertical</type>
        <pos>-0.01 0.0</pos>
        <size>1 1</size>
        <logoScale>1</logoScale>
        <logoSize>0.31 0.31</logoSize>
        <color>00000000</color>
        <maxLogoCount>3</maxLogoCount>
		<logoAlignment>left</logoAlignment> 
         <zIndex>7</zIndex>			
      </carousel> 
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
         <path>./_inc/images/crtmain.png</path>
      </image> 	  
      <text name="systemInfo">     
         <pos>-0.05 0.955</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>000000</color>
         <fontPath>./_inc/fonts/Casanova Scotia.otf</fontPath>
	     <fontSize>0.025</fontSize>
         <zIndex>10</zIndex>	     
      </text>            
   </view>
</feature>


<!--
On Screen help
-->

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/Motorstrike-7d0V.ttf</fontPath>
